<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bubble_tuto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="go.erick.ordene.BubbleTuto">

    <TextView
        android:text="Bubble Sort:\n1)Percorra o vetor a partir da primeira posição; \n2)Se o valor da próxima posição for menor, troque; \n3)Parta para a posição seguinte e repita o passo 2; \n4)Chegando na última posição, volte ao início caso tenha feito ao menos uma troca; \n5)Caso chegue ao fim sem realizar um troca, o vetor então está ordenado."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="18sp" />
    <Button
        android:text="Play Video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bubble"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_marginTop="61dp"
        android:fontFamily="casual"
        android:typeface="normal"
        android:textSize="36sp"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
